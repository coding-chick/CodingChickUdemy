<?xml version="1.0" encoding="utf-8"?>
<widget xmlns="http://openajax.org/metadata"
        xmlns:blend="http://schemas.microsoft.com/winjs/Blend/2011"
        spec="1.0"
        id="http://www.microsoft.com/schemas/corsica/1.0/MenuCommand_Toggle"
        name="WinJS.UI.MenuCommand_Toggle"
            blend:supportsContent="false"
        version="1.0">
  <author name="Microsoft Corporation" />
  <title type="text/plain">Menu Command Toggle Button</title>
  <icons>
    <icon src="controls_winjs.ui.menucommand_toggle.12x12.png" width="12" height="12" />
    <icon src="controls_winjs.ui.menucommand_toggle.16x16.png" width="16" height="16" />
  </icons>
  <description type="text/plain">
    <![CDATA[Command Toggle for use with the WinJS.UI.Menu.]]>
  </description>
  <requires>
    <require type="javascript" src="//Microsoft.WinJS.2.0/js/base.js" />
    <require type="javascript" src="//Microsoft.WinJS.2.0/js/ui.js" />
    <require type="javascript"><![CDATA[WinJS.UI.processAll();]]></require>
  </requires>
  <content>
    <![CDATA[
        <button data-win-control="WinJS.UI.MenuCommand" data-win-options="{label:'Toggle',type:'toggle'}"></button>
    ]]>
  </content>
</widget>
