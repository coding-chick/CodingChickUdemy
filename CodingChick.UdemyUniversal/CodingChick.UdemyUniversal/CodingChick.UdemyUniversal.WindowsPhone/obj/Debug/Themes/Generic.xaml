<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CodingChick.UdemyUniversal.Themes"
    xmlns:controls="using:CodingChick.UdemyUniversal.Controls">



    <Style TargetType="controls:CourseItemControl">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="controls:CourseItemControl">
                    <Grid Height="200" Width="340">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition Height="10"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Image x:Name="Image" Source="{Binding ImageUri}" Grid.RowSpan="3" Grid.ColumnSpan="2"/>
                        <Rectangle Stroke="Black" Grid.Row="2" Grid.ColumnSpan="2" Fill="#7FF4F4F5" StrokeThickness="0"/>
                        <TextBlock Text="{Binding Name}" Foreground="Black" Grid.Row="2" FontSize="18.667" FontWeight="Bold" TextWrapping="Wrap" HorizontalAlignment="Left" Width="340" Grid.ColumnSpan="2"/>
                        <TextBlock Text="{Binding Price}" Foreground="{Binding PriceColorBrush, RelativeSource={RelativeSource TemplatedParent}}"  TextWrapping="Wrap" Grid.Column="1" Grid.Row="0" HorizontalAlignment="Right" VerticalAlignment="Top" FontSize="24" FontWeight="Bold" FontFamily="Segoe UI"/>
                        <TextBlock Text="{Binding OriginalPrice}" HorizontalAlignment="Right" Margin="0,0,0,0" Foreground="#FF070000"/>
                        <Rectangle Stroke="Black" StrokeThickness="0" Grid.Row="1" Grid.ColumnSpan="2">
                            <Rectangle.Fill>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                    <GradientStop Color="Transparent" Offset="0"/>
                                    <GradientStop Color="#7FFFFFFF" Offset="1"/>
                                </LinearGradientBrush>
                            </Rectangle.Fill>
                        </Rectangle>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


    <Style TargetType="controls:CoursesListControl">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="controls:CoursesListControl">
                    <ListView
                        ItemsSource="{Binding}"
                        IsItemClickEnabled="True">
                        <!--ItemClick="GroupSection_ItemClick"-->
                        <!--<ListView.ItemTemplate>
                            <DataTemplate>
                                <controls:CourseItemControl PriceColorBrush="Red" />
                            </DataTemplate>
                        </ListView.ItemTemplate>-->
                    </ListView>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>

